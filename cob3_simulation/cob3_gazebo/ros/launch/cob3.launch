<?xml version="1.0"?>
<launch>

	<!-- launch empty world -->
	<include file="$(find cob3_gazebo)/ros/launch/cob3_world.launch" />

	<!-- send pr2_armless urdf to param server -->
	<include file="$(find cob3_defs)/ros/launch/upload_cob3.launch" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="cob3_urdf" pkg="gazebo_tools" type="gazebo_model" args="-z 0.051 -p robot_description spawn cob3_model" respawn="false" />

	<!-- Robot state publisher -->
	<node pkg="robot_state_publisher" type="state_publisher" name="robot_state_publisher">
		<param name="publish_frequency" type="double" value="50.0" />
		<param name="tf_prefix" type="string" value="" />
	</node>

	<!-- Controllers -->
	<include file="$(find cob3_defs)/ros/launch/cob3_controller.launch" />

<!--	<node pkg="rostopic" type="rostopic" name="fake_joint_calibration" args="pub /calibrated std_msgs/Bool true" /> -->

</launch>
